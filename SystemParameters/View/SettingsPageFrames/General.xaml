<UserControl x:Class="ClassRecordSystem.SystemParameters.View.SettingsPageFrames.General"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             mc:Ignorable="d" 
             d:DesignHeight="460" d:DesignWidth="720"
             Loaded="UserControl_Loaded">
    <Grid>
        <Grid.RowDefinitions>
           
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
            
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0"  Margin="10 10 0 10" Text="School Name"/>
            <dxe:TextEdit EditValueChanged="txtSchoolName_EditValueChanged" x:Name="txtSchoolName" Grid.Column="1" Margin="5" />
        </Grid>
    </Grid>
</UserControl>
